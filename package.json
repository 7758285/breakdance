{
  "name": "breakdance",
  "description": "Breakdance is a node.js library for converting HTML to markdown. Highly pluggable, flexible and easy to use. It's time for your markup to get down.",
  "version": "0.1.0",
  "homepage": "https://breakdance.io",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "repository": "breakdance/breakdance",
  "bugs": {
    "url": "https://github.com/breakdance/breakdance/issues"
  },
  "license": "MIT",
  "files": [
    "bin",
    "index.js",
    "lib"
  ],
  "main": "index.js",
  "bin": {
    "tomd": "bin/cli.js"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "test": "mocha"
  },
  "dependencies": {
    "cheerio": "^0.22.0",
    "define-property": "^0.2.5",
    "detect-indent": "^5.0.0",
    "diacritics-map": "^0.1.0",
    "export-files": "^2.1.1",
    "extend-shallow": "^2.0.1",
    "is-self-closing": "^1.0.0",
    "isobject": "^3.0.0",
    "kind-of": "^3.1.0",
    "mixin-deep": "^1.1.3",
    "repeat-string": "^1.6.1",
    "resolve-dir": "^1.0.0",
    "snapdragon": "^0.9.0",
    "snapdragon-cheerio": "^1.0.0",
    "snapdragon-util": "^1.0.2",
    "strip-attributes": "^0.2.0",
    "strip-color": "^0.1.0",
    "trim-leading-lines": "^0.1.1",
    "trim-trailing-lines": "^1.1.0",
    "unescape": "^0.2.0",
    "word-regex": "^0.1.1",
    "yargs-parser": "^4.2.1"
  },
  "devDependencies": {
    "dashify": "^0.2.2",
    "gulp": "^3.9.1",
    "gulp-eslint": "^3.0.1",
    "gulp-format-md": "^0.1.11",
    "gulp-istanbul": "^1.1.1",
    "gulp-mocha": "^3.0.1",
    "gulp-unused": "^0.2.0",
    "js-beautify": "^1.6.8",
    "mocha": "^3.2.0",
    "through2": "^2.0.3",
    "time-diff": "^0.3.1",
    "verb-generate-readme": "^0.4.2",
    "write": "^0.3.2"
  },
  "keywords": [
    "breakdance",
    "convert",
    "format",
    "html",
    "markdown",
    "parse",
    "plain text",
    "re-format",
    "render",
    "text"
  ],
  "verb": {
    "toc": {
      "method": "preWrite",
      "maxdepth": 2,
      "footer": false
    },
    "layout": null,
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "lint": {
      "reflinks": true
    },
    "related": {
      "list": []
    },
    "reflinks": [
      "assemble",
      "cheerio",
      "micromatch",
      "remarkable",
      "snapdragon",
      "verb",
      "verb-generate-readme"
    ]
  }
}